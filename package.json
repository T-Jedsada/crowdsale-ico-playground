{
  "name": "crowdsale-ico-playground",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "antd": "^3.10.9",
    "dotenv": "^6.0.0",
    "moment": "^2.22.2",
    "openzeppelin-solidity": "^2.0.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-redux": "^6.0.0",
    "react-scripts": "2.1.1",
    "reactflipclock-js": "^1.0.0",
    "redux": "^4.0.1",
    "truffle-hdwallet-provider": "^0.0.6"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prettier": "prettier --write \"src/**/*.{js,css}\"",
    "prettier-changefiles": "pretty-quick --staged",
    "precommit": "yarn run prettier-changefiles",
    "complie": "yarn lint && truffle complie",
    "deploy": "yarn lint && truffle migrate",
    "lint": "solhint \"contracts/**/*.sol\"",
    "start-ganache": "ganache-cli --networkId 1234567 --blockTime=0.1 -p 8545",
    "test-contract": "truffle test --network development",
    "test-coverage": "solidity-coverage"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.2",
    "pretty-quick": "^1.6.0",
    "solidity-coverage": "^0.5.11",
    "truffle-assertions": "^0.5.0"
  }
